<div class="row">
  <center>
    <div class="col-md-6">
      <h4 class="red_font">Ready to eat!</h4>
      <div id="OrderedBurgers">

     {{#each burgers}}
        {{#unless devoured}}
        <form action="burger/eat/{{id}}" method="POST">
          <div class="input-group">
            <li class="form-control">{{id}}. {{burger_name}}</li>
            <span class="input-group-btn">
              <button class="btn btn-warning eat-button" type="submit">Eat Up!!</button>
            </span>
          </div>
        </form>
        {{/unless}}
        {{/each}}

      </div>
    </div>

    <div class="col-md-6">
      <h4 class="red_font">Already eaten!</h4>
      <div id="eatenBurgers">

        {{#each burgers}}
        {{#if this.devoured}}
        <div class="input-group">
          <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
          <span class="input-group-btn">
            <button class="btn btn-info whine-button" type="button">Whine!</button>
          </span>
        </div>
        {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>